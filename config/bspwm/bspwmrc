#! /bin/sh

# startup programs
sxhkd &
feh --bg-center $HOME/.config/bspwm/wallpaper/forest.jpg &
$HOME/.config/polybar/launch.sh

#
# base
#
bspc config focus_follows_pointer true

# display
bspc monitor eDP -d TTY WEB LAB MED V
bspc monitor HDMI-A-0 -d VI VII VIII IX X

#
# visual configuration
#
bspc config border_width         0
bspc config window_gap           2

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# colorscheme
bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color15"
bspc config presel_feedback_color "$color1"

# desktop 1
bspc rule -a kitty desktop='^1' state=floating follow=on

# desktop 2
bspc rule -a firefox desktop='^2' follow=on

# desktop 3
bspc rule -a Gimp desktop='^4'
bspc rule -a inkscape desktop='^4'
bspc rule -a thunar desktop='^3' state=floating

# desktop 4

# desktop 5
bspc rule -a Arandr desktop='^5' state=floating
bspc rule -a Pavucontrol desktop='^5' state=floating

# desktop 6
bspc rule -a stremio desktop='^6' state=fullscreen

# desktop 7

# desktop 8

# desktop 9

# desktop 0
