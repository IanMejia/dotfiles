include-file = ~/.config/polybar/colors.ini

[bar/mybar]
monitor = ${env:MONITOR:eDP}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true

background = ${color.bg}
foreground = ${color.fg}

line-size = 3
