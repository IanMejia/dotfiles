[global/wm]
margin-top = 0
margin-bottom = 0

include-file = ~/.config/polybar/modules.ini
include-file = ~/.config/polybar/colors.ini

[bar/mybar]
monitor = ${env:MONITOR:eDP}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 2
radius = 0
fixed-center = true

background = ${color.bg}
foreground = ${color.dark_gray}

line-size = 1
line-color = #f00

;add if you prefer a transparent border around the bar
border-size = 0
border-bottom-size = 0
border-color = ${color.dark_gray}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = "Ubuntu Condensed:size=10;1"
font-1 = "icomoon\-feather:size=10;2"
font-2 = "Iosevka:size=35;25"

modules-left = bspwm left
modules-center = title
modules-right = right pulseaudio keyboard network date battery

tray-background = ${color.linebg}
tray-position = right
tray-padding = 2

wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = false

;; extra modules

[module/left]
type = custom/text
content-background = ${color.linebg}
content-foreground = ${color.bg}
content-underline = ${color.dark_blue}
content = "%{T3}%{T-}"

[module/right]
type = custom/text
content-background = ${color.bg}
content-foreground = ${color.linebg}
content = "%{T3}%{T-}"

